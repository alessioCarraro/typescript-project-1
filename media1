while ((isValid) && (indice < 5))
{
    const numeroProva = Number(prompt("inserire numero: "));
    if ((numeroProva < 1) || (numeroProva > 10))
    {
        isValid = false;
        alert("numero non valido");
    }
    else
    {
        sum += numeroProva;
    }
    indice += 1;
}

